<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hrb.ShapeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="380dp"
        android:layout_height="272dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/triangle" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/square" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/pentagon" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/hexagon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="362dp"
        android:layout_height="139dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">


        <Button
            android:id="@+id/ans1"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#f9db40"
            android:text="Same color"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/ans2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#f9db40"
            android:text="Different sizes"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/ans3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#f9db40"
            android:text="Increasing sides number"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/ans4"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#f9db40"
            android:text="Different colors"
            app:cornerRadius="50dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="330dp"
        android:layout_height="87dp"
        android:layout_marginTop="68dp"
        android:fontFamily="sans-serif"
        android:text="Identify the rule or pattern connecting the shapes. Multiple answers are possible."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#944CE8"
        android:text="Check"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>