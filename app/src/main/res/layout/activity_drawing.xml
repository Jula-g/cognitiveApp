<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mmse.DrawingActivity">


    <EditText
        android:id="@+id/sentenceInput"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:hint="City name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/checkSentenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sentenceInput"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7FD641"
        android:text="Check "
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sentenceInput" />


    <Button
        android:id="@+id/checkDrawingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#7FD641"
        android:text="Check Drawing"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:text="What city/town are we in?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="409dp"
        android:layout_height="140dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ImageView
            android:id="@+id/pentagon1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:rotation="90"
            android:src="@drawable/pentagon"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="379dp" />

        <ImageView
            android:id="@+id/pentagon2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:rotation="-90"
            android:src="@drawable/pentagon"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="379dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="311dp"
        android:layout_height="98dp"
        android:layout_marginTop="50dp"
        android:text="Move the pentagon on the right to this on the left this way so the intersection will create a 4-sided figure."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkSentenceButton" />

</androidx.constraintlayout.widget.ConstraintLayout>